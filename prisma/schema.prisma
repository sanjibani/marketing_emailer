generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  contacts      Contact[]
  campaigns     Campaign[]
  templates     Template[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models

// Application Models

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  company   String?
  tags      String?  // Stored as comma-separated string or JSON string if needed, keeping simple for now
  source    String   @default("manual") // "manual", "csv", "ai"
  deletedAt DateTime? // Soft delete field
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  campaigns        CampaignContact[]
  scheduledEmails  ScheduledEmail[]
}

model Template {
  id        String   @id @default(cuid())
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  campaigns Campaign[]
}

model Campaign {
  id          String    @id @default(cuid())
  name        String
  description String?   // Description for AI scraping context
  status      String    @default("draft") // "draft", "scheduled", "sending", "sent"
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String?
  user        User?     @relation(fields: [userId], references: [id])

  templateId  String
  template    Template  @relation(fields: [templateId], references: [id])
  
  recipients       CampaignContact[]
  stats            CampaignStats?
  logs             EmailLog[]
  scheduledEmails  ScheduledEmail[]
}

model CampaignContact {
  campaignId String
  contactId  String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contact    Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@id([campaignId, contactId])
}

model CampaignStats {
  id         String   @id @default(cuid())
  campaignId String   @unique
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  sent       Int      @default(0)
  opened     Int      @default(0)
  clicked    Int      @default(0)
}

model EmailLog {
  id         String   @id @default(cuid())
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  recipient  String
  status     String   // "sent", "failed"
  error      String?
  sentAt     DateTime @default(now())
}

model ScheduledEmail {
  id          String    @id @default(cuid())
  campaignId  String
  contactId   String
  status      String    @default("pending") // "pending", "sent", "failed", "cancelled"
  scheduledAt DateTime
  sentAt      DateTime?
  error       String?
  createdAt   DateTime  @default(now())
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
}
